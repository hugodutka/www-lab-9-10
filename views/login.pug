html
  head
    title= title
  style
    include style.css
  body
    include header.pug
    div
      form(method="POST")
        div.form-group
          input(type="hidden" name="_csrf" value=`${csrf_token}`)
          label(for="username") Username:
          input#price.form-control(type="text" name="username")
          br
          label(for="password") Password:
          input#price.form-control(type="password" name="password")
        button.btn.btn-primary(type="submit") Login
        if login_failure
          h4 Login failed
